	"version": "0.2.0",
	"configurations": [

		{
			"type": "node",
			"request": "launch",
			"name": "Jest Tests",
			"protocol": "legacy",
			"program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
			"args": [
				"-i"
			],
			"preLaunchTask": "build",
			"internalConsoleOptions": "openOnSessionStart",
			"outFiles": [
				"${workspaceRoot}/dist/**/*"
			]
		}
	]
}